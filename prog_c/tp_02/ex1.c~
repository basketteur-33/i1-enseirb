#include <stdlib.h>
#include <stdio.h>
#include <string.h>


void usage(char *s) {
  perror(s);
  exit(1);
}


int my_strlen(char *str) {
  int i = 0;

  while (str[i] != 0)
    i++;

  return i;
}


int main(int argc, char *argv[]) {
  if (argc != 2)
    usage("usage: ./ex1 chaine");

  printf("La chaîne a pour longueur : %d\n", strlen(argv[1]));
  printf("Avec my_strlen, la chaîne a pour longueur : %d\n", my_strlen(argv[1]));

  return EXIT_SUCCESS;
}

   
